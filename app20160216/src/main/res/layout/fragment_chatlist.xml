<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/titlebar"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fa00a2ff">



        <TextView
            android:id="@+id/recUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消息列表"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/addconnect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:text="添加"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:padding="8dp"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/chattest"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="admin聊天测试"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_below="@id/titlebar"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/chat123"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="123聊天测试"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_below="@id/chattest"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/chat1234"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="1234聊天测试"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_below="@id/chat123"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:textSize="18sp"
        />

    <ImageView
        android:id="@+id/newMsg"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/newmsgwarn"
        android:layout_below="@id/titlebar"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:visibility="invisible"
        />




</RelativeLayout>
