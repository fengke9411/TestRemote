<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fa00a2ff"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text=""
            android:layout_centerInParent="true"
            />


    </RelativeLayout>



    <TextView
        android:id="@+id/showtitle"
        android:layout_below="@id/titlebar"

        android:textSize="18dp"
        android:text="16字以内"
        android:textColor="#000000"
        android:layout_marginRight="4dp"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/showdate"

        android:layout_below="@id/showtitle"
        android:textSize="16dp"
        android:textColor="#555555"
        android:text="2016年2月17日10:00:22"
        android:layout_width="match_parent"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/showauthor"

        android:layout_below="@id/showtitle"
        android:textSize="16dp"
        android:textColor="#555555"
        android:text="frank"
        android:layout_width="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/submit"
        android:text="提交"
        android:textSize="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="4dp"
        />
    <TextView
        android:id="@+id/showbody"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="textMultiLine"
        android:layout_below="@id/showdate"
        android:layout_above="@id/submit"
        android:textSize="16dp"
        android:textColor="#000000"
        android:gravity="left"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="啊烦恼年年初开始看空房价啦啊山东哦亲烦恼年年初开始看空房价啦啊山东哦亲我看人拉卡啦师范类释放咖啡来啦斯里兰卡方式我看人拉卡啦师范类释放咖啡来啦斯里兰卡方式"
        />



</RelativeLayout>