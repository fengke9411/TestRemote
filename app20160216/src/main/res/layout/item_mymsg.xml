<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:padding="8dp"
    >



    <TextView
        android:id="@+id/timeStamp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="昨天2:12"
        android:gravity="center"
        android:padding="4dp"
        android:textColor="@android:color/darker_gray"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/headview"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_below="@id/timeStamp"
        android:background="@drawable/my"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/msgbody"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/mymsgbody"
        android:layout_below="@id/timeStamp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center_vertical"
        android:padding="8dp"
        android:layout_marginRight="8dp"
        android:layout_toStartOf="@id/headview"

        android:text="测试测试测试测试测试测试试测试测试试测试测试测试测试"
        />

    <TextView
        android:id="@+id/msgStatus"
        android:text="已读"
        android:textColor="@android:color/darker_gray"
        android:layout_toStartOf="@id/msgbody"
        android:layout_below="@id/timeStamp"
        android:layout_width="wrap_content"

        android:padding="8dp"
        android:layout_alignBaseline="@id/msgbody"
        android:layout_height="wrap_content"
        android:visibility="visible"
        />

    <ProgressBar
        android:id="@+id/sendStatus"
        style="@style/Base.Widget.AppCompat.ProgressBar"
        android:layout_width="24dp"
        android:layout_height="24dp"
       android:layout_centerVertical="true"
        android:layout_toStartOf="@id/msgbody"
        android:layout_margin="8dp"
        />
</RelativeLayout>